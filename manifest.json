{
    "manifest_version": 3,
    "name": "AdServe Debugger",
    "version": "1.0",
    "description": "Simulate, capture, and decode AdTech requests in real-time.",
    "permissions": ["webRequest", "webRequestBlocking", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon128.png"
    },
    "icons": {
      "128": "icons/icon128.png"
    }
  }
  